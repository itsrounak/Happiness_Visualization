{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
  "description": "Waterfall chart",
  "padding": 5,
  "hconcat": [
    {
      "title": {"text": ["GDP per Capita$"]},
      "height": 400,
      "width": 650,
      "data": {
        "url": "https://alxojy.github.io/econs-viz/data/world_map.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/raga0003/FIT3179-Assignment-2/main/Dataset/gdp.csv"
            },
            "key": "Country",
            "fields": ["GDP", "Year", "Country"]
          }
        },
        {"calculate": "datum.GDP", "as": "GDP"}
      ],
      "layer": [
        {
          "selection": {
            "country": {
              "type": "multi",
              "init": {"Country": "Russia"},
              "fields": ["Country"],
              "on": "click",
              "resolve": "global",
              "empty": "none"
            },
            "highlight": {"type": "single", "empty": "none", "on": "mouseover"}
          },
          "projection": {"type": "equirectangular"},
          "mark": {"type": "geoshape", "strokeWidth": 0.6, "stroke": "#003735"},
          "encoding": {
            "color": {
              "condition": [
                {"selection": "country", "value": "white"},
                {"test": "datum.GDP < 1", "value": "#D3D3D3"},
                {"selection": "highlight", "value": "white"}
              ],
              "field": "GDP",
              "type": "quantitative",
              "scale": {
                "range": [
                  "#ffffb2",
                  "#fed976",
                  "#feb24c",
                  "#fd8d3c",
                  "#f03b20",
                  "#bd0026"
                ],
                "type": "bin-ordinal",
                "domain": [1000, 5000, 10000, 20000, 40000, 60000, 80000]
              }
            },
            "tooltip": [
              {"field": "Country", "type": "nominal"},
              {"field": "GDP", "type": "quantitative"}
            ]
          }
        },
        {
          "mark": {
            "type": "text",
            "fontSize": 17,
            "dy": -195,
            "color": "#f03b20"
          },
          "encoding": {
            "text": {
              "condition": {
                "selection": "country",
                "field": "Country",
                "type": "nominal"
              }
            }
          }
        }
      ]
    },
    {
      "vconcat": [
        {
          "height": 300,
          "width": 60,
          "title": {"text": ["GDP per year"], "offset": 10},
          "data": {
            "url": "https://raw.githubusercontent.com/raga0003/FIT3179-Assignment-2/main/Dataset/gdp.csv"
          },
          "transform": [{"filter": {"selection": "country"}}],
          "mark": {
            "type": "bar",
            "line": {"color": "E26A2C"},
            "color": {
              "x1": 1,
              "y1": 1,
              "x2": 1,
              "y2": 0,
              "gradient": "linear",
              "stops": [
                {"offset": 0, "color": "FFD07F"},
                {"offset": 1, "color": "E26A2C"}
              ]
            }
          },
          "encoding": {
            "x": {"field": "Year", "type": "ordinal"},
            "y": {"field": "GDP", "type": "quantitative"}
          }
        }
      ]
    }
  ],
  "config": {
    "axis": {
      "labelFont": "sans-serif",
      "titleFont": "sans-serif",
      "labelFontSize": 12
    },
    "header": {
      "labelFont": "sans-serif",
      "titleFont": "sans-serif",
      "labelFontSize": 12
    },
    "mark": {"font": "sans-serif", "fontSize": 12},
    "legend": {"labelFont": "sans-serif"},
    "title": {"font": "sans-serif", "fontSize": 16, "color": "#293E3A"},
    "concat": {"spacing": 20},
    "style": {"cell": {"stroke": "transparent"}},
    "text": {
      "baseline": "bottom",
      "align": "center",
      "fontWeight": "bold",
      "font": "sans-serif"
    },
    "background": "#F6F6F6"
  }
}
